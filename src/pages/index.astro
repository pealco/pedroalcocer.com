---
import BaseLayout from '../layouts/BaseLayout.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog', ({ data }) => !data.draft))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<BaseLayout title="Pedro Alcocer">
  <section>
    <h1>Pedro Alcocer</h1>
    <p style="margin-top: 0.5rem; color: var(--color-text-muted); max-width: 480px;">
      Welcome to my corner of the internet. I write about programming, linguistics, and other things I find interesting.
    </p>
  </section>

  <section style="margin-top: 3rem;">
    <h2>Recent posts</h2>
    {posts.map((post) => (
      <PostCard
        title={post.data.title}
        description={post.data.description}
        pubDate={post.data.pubDate}
        href={`/blog/${post.id}/`}
      />
    ))}
    {posts.length > 0 && (
      <p style="margin-top: 1rem;">
        <a href="/blog/">All posts &rarr;</a>
      </p>
    )}
  </section>
</BaseLayout>
