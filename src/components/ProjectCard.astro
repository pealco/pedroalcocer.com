---
interface Props {
  title: string;
  description: string;
  tags: string[];
  url?: string;
}

const { title, description, tags, url } = Astro.props;
---

<div class="project-card">
  <h3>
    {url ? <a href={url} target="_blank" rel="noopener noreferrer">{title} &rarr;</a> : title}
  </h3>
  <p>{description}</p>
  <div class="tags">
    {tags.map((tag) => <span class="tag">{tag}</span>)}
  </div>
</div>

<style>
  .project-card {
    padding: 1rem 0;
    border-bottom: 1px solid var(--color-border);
  }

  .project-card:first-child {
    border-top: 1px solid var(--color-border);
  }

  h3 {
    font-size: 1.125rem;
    margin-bottom: 0.25rem;
  }

  h3 a {
    text-decoration: none;
  }

  h3 a:hover {
    color: var(--color-text-muted);
  }

  p {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    line-height: 1.5;
    margin-bottom: 0.5rem;
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    color: var(--color-text-muted);
    border: 1px solid var(--color-border);
    padding: 0.125rem 0.5rem;
    border-radius: 3px;
  }
</style>
